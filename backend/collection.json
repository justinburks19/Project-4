{
  "info": {
    "name": "CSC436 Tasks API",
    "description": "CRUD collection points",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  
  "variable": [
    { "key": "baseUrl", "value": "http://127.0.0.1:3000" },
    { "key": "taskId", "value": "1" }
  ],
  
  "item": [
    {
      "name": "Serever Health Check",
      "request": {
        "method": "GET",
        "url": "{{baseUrl}}/api/health"
      },
      "event": [
        {
          "listen": "test",
          "script": {
            "exec": [
              "pm.test('Status is 200', () => pm.response.to.have.status(200));",
              "pm.test('Has status OK', () => pm.response.json().status === 'OK');"
            ],
            "type": "text/javascript"
          }
        }
      ]
    },
    {
      "name": "List Tasks",
      "request": {
        "method": "GET",
        "url": "{{baseUrl}}/api/tasks"
      },
      "event": [
        {
          "listen": "test",
          "script": {
            "exec": [
              "pm.test('Status is 200', () => pm.response.to.have.status(200));",
              "pm.test('Returns array or object with items', () => {",
              "  const j = pm.response.json();",
              "  pm.expect(Array.isArray(j) || (j.items && Array.isArray(j.items))).to.be.true;",
              "});"
            ],
            "type": "text/javascript"
          }
        }
      ]
    },
    {
      "name": "Create Task",
      "request": {
        "method": "POST",
        "header": [{ "key": "Content-Type", "value": "application/json" }],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"playerCard\": \"New playerCard \",\n  \"desc\": \"New description\",\n  \"age\": \" \"\n}"
        },
        "url": "{{baseUrl}}/api/tasks"
      },
      "event": [
        {
          "listen": "test",
          "script": {
            "exec": [
              "pm.test('Status is 201', () => pm.response.to.have.status(201));",
              "const body = pm.response.json();",
              "pm.test('Has id', () => pm.expect(body.id).to.exist);",
              "// Save the created id for follow-up requests",
              "pm.collectionVariables.set('taskId', String(body.id));"
            ],
            "type": "text/javascript"
          }
        }

      ]
    },
    {
      "name": "Get Task by ID",
      "request": {
        "method": "GET",
        "url": "{{baseUrl}}/api/tasks/{{taskId}}"
      },
      "event": [
        {
          "listen": "test",
          "script": {
            "exec": [
              "pm.test('Status is 200', () => pm.response.to.have.status(200));",
              "pm.test('Matches taskId', () => {",
              "  const j = pm.response.json();",
              "  pm.expect(String(j.id)).to.eql(pm.collectionVariables.get('taskId'));",
              "});"
            ],
            "type": "text/javascript"
          }
        }
      ]
    },
    {
      "name": "Update Task (PUT)",
      "request": {
        "method": "PUT",
        "header": [{ "key": "Content-Type", "value": "application/json" }],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"playerCard\": \"New playerCard \",\n  \"desc\": \"New description\",\n  \"age\": \" \"\n, \"active\": false\n}"
        },
        "url": "{{baseUrl}}/api/tasks/{{taskId}}"
      },
      "event": [
        {
          "listen": "test",
          "script": {
            "exec": [
              "pm.test('Status is 200', () => pm.response.to.have.status(200));",
              "const j = pm.response.json();",
              "pm.test('Updated fields match', () => {",
              "  pm.expect(j.title).to.eql('Updated via Postman');",
              "  pm.expect(j.completed).to.eql(true);",
              "});"
            ],
            "type": "text/javascript"
          }
        }
      ]
    },
    {
      "name": "Delete Task",
      "request": {
        "method": "DELETE",
        "url": "{{baseUrl}}/api/tasks/{{taskId}}"
      },
      "event": [
        {
          "listen": "test",
          "script": {
            "exec": [
              "pm.test('Status is 204', () => pm.response.to.have.status(204));"
            ],
            "type": "text/javascript"
          }
        }
      ]
    },
    {
      "name": "Verify Deleted (should 404)",
      "request": {
        "method": "GET",
        "url": "{{baseUrl}}/api/tasks/{{taskId}}"
      },
      "event": [
        {
          "listen": "test",
          "script": {
            "exec": [
              "pm.test('Status is 404', () => pm.response.to.have.status(404));"
            ],
            "type": "text/javascript"
          }
        }
      ]
    }
  ]
}
